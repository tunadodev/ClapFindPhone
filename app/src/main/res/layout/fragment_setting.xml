<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_sound_controller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/bg_radius_12"
                android:backgroundTint="#F5F9FF"
                android:gravity="center_vertical"
                android:paddingVertical="@dimen/_14sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_16sdp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:src="@drawable/ic_sound_settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:text="@string/sound"
                    android:textColor="#404040"
                    android:textSize="@dimen/_14sdp" />

                <com.ibl.tool.clapfindphone.main.widget.SwitchButton
                    android:id="@+id/sb_sound"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_24sdp"
                    app:sb_checked_color="#1380FF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_radius_12"
                android:backgroundTint="#F5F9FF"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_14sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_2sdp"
                app:layout_constraintTop_toBottomOf="@id/ll_sound_controller">

                <LinearLayout
                    android:id="@+id/ll_flash_controller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_flash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="@string/flashlight"
                        android:textColor="#404040"
                        android:textSize="@dimen/_14sdp" />

                    <com.ibl.tool.clapfindphone.main.widget.SwitchButton
                        android:id="@+id/sb_flash"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_24sdp"
                        app:sb_checked_color="#1380FF" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="#F5F5F5" />

                <FrameLayout
                    android:id="@+id/fr_contain_flash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp">

                    <View
                        android:id="@+id/v_lock_flash"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="1dp" />

                    <RadioGroup
                        android:id="@+id/rg_flash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_flash_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/txt_default"
                            android:textColor="#404040"
                            android:textSize="@dimen/_14sdp"
                            app:buttonTint="#868686" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_flash_disco"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/disco_mode"
                            android:textColor="#404040"
                            android:textSize="@dimen/_14sdp"
                            app:buttonTint="#868686" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_flash_sos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layoutDirection="rtl"

                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/sos_mode"
                            android:textColor="#404040"
                            android:textSize="@dimen/_14sdp"
                            app:buttonTint="#868686" />
                    </RadioGroup>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_radius_12"
                android:backgroundTint="#F5F9FF"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_14sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:paddingBottom="@dimen/_2sdp"
                app:layout_constraintTop_toBottomOf="@id/ll_sound_controller">

                <LinearLayout
                    android:id="@+id/ll_vibrate_controller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_vibrate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        android:text="@string/vibrate"
                        android:textColor="#404040"
                        android:textSize="@dimen/_14sdp" />

                    <com.ibl.tool.clapfindphone.main.widget.SwitchButton
                        android:id="@+id/sb_vibrate"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_24sdp"
                        app:sb_checked_color="#1380FF" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="#F5F5F5" />

                <FrameLayout
                    android:id="@+id/fr_contain_vibrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp">

                    <View
                        android:id="@+id/v_lock_vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="1dp" />

                    <RadioGroup
                        android:id="@+id/rg_vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_vibrate_default"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/txt_default"
                            android:textColor="#404040"
                            android:textSize="@dimen/_14sdp"
                            app:buttonTint="#868686" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_vibrate_strong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/strong_vibration"
                            android:textColor="#404040"
                            android:textSize="@dimen/_14sdp"
                            app:buttonTint="#868686" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_vibrate_heart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/heartbeat"
                            android:textColor="#404040"
                            android:textSize="@dimen/_14sdp"
                            app:buttonTint="#868686" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_vibrate_ticktock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:layoutDirection="rtl"
                            android:paddingStart="@dimen/_8sdp"
                            android:text="@string/ticktock"
                            android:textColor="#404040"
                            android:textSize="@dimen/_14sdp"
                            app:buttonTint="#868686" />
                    </RadioGroup>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_language"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_item_language"
                android:backgroundTint="#F5F9FF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_settings_language" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/language"
                    android:textColor="#404040"
                    android:textSize="@dimen/_15sdp" />

                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:src="@drawable/flag_2" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_rate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_item_language"
                android:backgroundTint="#F5F9FF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_settings_rate" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/txt_rate_us"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:textColor="#404040"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_item_language"
                android:backgroundTint="#F5F9FF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_settings_share" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/txt_share"
                    android:textColor="#404040"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_feedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_item_language"
                android:backgroundTint="#F5F9FF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_settings_feedback" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/txt_feedback_us"
                    android:textColor="#404040"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_privacy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_item_language"
                android:backgroundTint="#F5F9FF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:src="@drawable/ic_settings_privacy" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/txt_privacy"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:textColor="#404040"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_24sdp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>