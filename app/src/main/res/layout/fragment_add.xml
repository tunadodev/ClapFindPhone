<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ct_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_empty"
            app:layout_constraintVertical_bias="0.05"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_guide"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:elevation="5dp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="@string/there_are_no_files_n_let_s_try_to_create_new_files_now"
            android:textAlignment="center"
            android:textColor="#7E7E7E"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintEnd_toEndOf="@+id/iv_empty"
            app:layout_constraintStart_toStartOf="@+id/iv_empty"
            app:layout_constraintTop_toBottomOf="@+id/iv_empty"/>

        <ImageView
            android:id="@+id/iv_guide_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_28sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:src="@drawable/ic_guide_create_new"
            app:layout_constraintBottom_toTopOf="@+id/ll_create_sound"
            app:layout_constraintEnd_toEndOf="@+id/ll_create_sound" />
        <LinearLayout
            android:id="@+id/ll_create_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_48sdp"
            app:layout_constraintVertical_bias="0.2"
            android:background="@drawable/bg_radius_gradient"
            app:layout_constraintTop_toBottomOf="@+id/tv_empty"
            app:layout_constraintStart_toStartOf="@+id/tv_empty"
            app:layout_constraintEnd_toEndOf="@+id/tv_empty"
            android:gravity="center"
            android:elevation="5dp"
            android:paddingVertical="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_8sdp"
                android:src="@drawable/ic_create_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/create_sound"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
            
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView 
        android:id="@+id/rcv_sound_import"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintTop_toTopOf="parent"/>
