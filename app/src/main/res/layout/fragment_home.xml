<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vuive"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fr_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:visibility="invisible"
        android:layout_margin="@dimen/_1sdp"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/fr_ad"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.15">

<!--                <androidx.appcompat.widget.AppCompatImageView-->
<!--                    android:layout_width="@dimen/_190sdp"-->
<!--                    android:layout_height="@dimen/_190sdp"-->
<!--                    android:background="@drawable/blur_btn_main"-->
<!--                    app:layout_constraintBottom_toBottomOf="@+id/cl_click_tab"-->
<!--                    app:layout_constraintDimensionRatio="1:1"-->
<!--                    app:layout_constraintEnd_toEndOf="@+id/cl_click_tab"-->
<!--                    app:layout_constraintHeight_percent="1.5"-->
<!--                    app:layout_constraintStart_toStartOf="@+id/cl_click_tab"-->
<!--                    app:layout_constraintTop_toTopOf="@+id/cl_click_tab"-->
<!--                    app:layout_constraintWidth_percent=".6" />-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_click_tab"
                    android:layout_width="@dimen/_144sdp"
                    android:layout_height="@dimen/_144sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/icon_tap_active"
                    android:clipToOutline="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_circle_active"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/circle_active"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_percent="0.72"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.72" />

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:src="@drawable/avatar_cat_meowing"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:id="@+id/space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_click_tab"
                    app:layout_constraintEnd_toEndOf="@+id/cl_click_tab"
                    app:layout_constraintHorizontal_bias="0.7"
                    app:layout_constraintStart_toStartOf="@+id/cl_click_tab"
                    app:layout_constraintTop_toTopOf="@+id/cl_click_tab"
                    app:layout_constraintVertical_bias="0.35" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lav_click_inactive"
                    android:layout_width="@dimen/_107sdp"
                    android:layout_height="@dimen/_113sdp"
                    app:layout_constraintStart_toEndOf="@+id/space"
                    app:layout_constraintTop_toBottomOf="@+id/space"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/animation_click"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/lav_click_active"
                    android:layout_width="@dimen/_107sdp"
                    android:layout_height="@dimen/_113sdp"
                    android:padding="@dimen/_20sdp"
                    android:src="@drawable/ic_click"
                    android:visibility="invisible"
                    app:layout_constraintStart_toEndOf="@+id/space"
                    app:layout_constraintTop_toBottomOf="@+id/space"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_main_audio"
                android:drawablePadding="@dimen/_8sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="audio1"
                android:textColor="#979797"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_center" />


            <TextView
                android:id="@+id/txt_inactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/tap_to_inactive"
                android:textColor="#404040"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <TextView
                android:id="@+id/txt_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/tap_to_active"
                android:textColor="#404040"
                android:textSize="@dimen/_16sdp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/txt_inactive"
                app:layout_constraintEnd_toEndOf="@id/txt_inactive"
                app:layout_constraintStart_toStartOf="@id/txt_inactive"
                app:layout_constraintTop_toTopOf="@id/txt_inactive" />

            <TextView
                android:id="@+id/tv_inactive"
                android:layout_width="@dimen/_235sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@drawable/frame_guide"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="5sp"
                android:padding="@dimen/_8sdp"
                android:text="@string/activation_text2"
                android:textColor="#7E7E7E"
                android:textSize="@dimen/_12sdp"
                android:translationY="-2.52sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_active" />

            <LinearLayout
                android:id="@+id/ll_tv_inactive"
                android:layout_width="@dimen/_244sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/frame_guide"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/tv_inactive"
                app:layout_constraintEnd_toEndOf="@id/tv_inactive"
                app:layout_constraintStart_toStartOf="@id/tv_inactive"
                app:layout_constraintTop_toTopOf="@id/tv_inactive">

                <TextView
                    android:id="@+id/tv_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:foregroundGravity="center"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/txt_active"
                    android:textColor="#7E7E7E"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
