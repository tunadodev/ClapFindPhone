<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InterestButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/button_unselected</item>
        <item name="android:textColor">#404040</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeMaxTextSize">@dimen/_13sdp</item>
        <item name="android:autoSizeMinTextSize">@dimen/_4sdp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>