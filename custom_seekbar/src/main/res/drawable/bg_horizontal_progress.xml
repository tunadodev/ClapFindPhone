<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center_vertical">
        <scale android:scaleWidth="100%">
            <selector>
                <item
                    android:drawable="@color/bg_seekbar"
                    android:state_enabled="false" />
                <item>
                    <shape android:shape="rectangle">
                        <gradient android:startColor="#3CBAE3" android:endColor="#25D9C0"/>
                        <size android:height="@dimen/_14sdp" />
                        <corners
                            android:bottomLeftRadius="@dimen/_150sdp"
                            android:topLeftRadius="@dimen/_150sdp" />
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>
