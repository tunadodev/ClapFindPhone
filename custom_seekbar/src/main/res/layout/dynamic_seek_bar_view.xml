<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:dms="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/bg_info"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <View
            android:id="@+id/arrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginBottom="-4dp"
            android:background="@drawable/triangle_shape"
            android:rotation="180" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ll_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@drawable/bg_seek_bar" />

            <com.widget.custom_seekbar.CustomSeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_14sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:max="10"
                android:progress="5"
                android:splitTrack="false"
                app:dsbv_infoBackgroundColor="@color/gntRed"
                app:dsbv_infoInitText="@string/app_name"
                app:dsbv_infoRadius="160"
                app:dsbv_infoTextColor="@android:color/white"
                app:dsbv_infoTextSize="12dp"
                app:dsbv_isHideInfo="false"
                dms:dms_progressDrawable="@drawable/bg_horizontal_progress"
                dms:dms_thumbDrawable="@drawable/ic_seek_thumb"
                dms:dms_thumbSize="@dimen/_20sdp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>


